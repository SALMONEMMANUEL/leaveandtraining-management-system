<div id="Modal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <form method="post" action="/admin/create-leave">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Add Leave Type</h5>
                    
                  </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="leave">Leave Type:</label>
                        <input type="text" name="leave" id="leave" class="form-control">     
                    </div>
                    
                    <div class="form-group">
                        <label for="leave">Application Date From:</label>
                        <input type="date" name="appdate" id="appdate" class="form-control">     
                    </div>
                    <div class="form-group">
                        <label for="default">Default Period:</label>
                        <input type="text" name="period" id="period" class="form-control">     
                    </div>

                   
                <div class="modal-footer">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="reset" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-default">submit</button>
                </div>
            </form>
        </div>

    </div>
</div>